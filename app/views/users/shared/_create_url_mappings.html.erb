<div class="row">
  <div class="col-md-10 col-lg-8 col-xl-7 mx-auto mt-3">
    <h1 class="my-5">Short links, big results!</h1>
  </div>
  <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
    <%= form_for @url_mapping, url: url_mappings_path, html: {class: "form-row"} do |f| %>
      <div class="form-group">
        <%= f.text_field :original_url, class: "form-control form-control-lg", autofocus: true, required: true, placeholder: "Shorten your link" %>
      </div>
      <%= f.submit "Submit", class: "btn btn-block btn-lg btn-primary mt-3" %>
    <% end %>
  </div>
</div>
